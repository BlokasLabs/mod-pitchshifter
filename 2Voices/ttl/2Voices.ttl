@prefix bsize: <http://lv2plug.in/ns/ext/buf-size#>.
@prefix doap:  <http://usefulinc.com/ns/doap#>.
@prefix epp:   <http://lv2plug.in/ns/ext/port-props/#>.
@prefix foaf:  <http://xmlns.com/foaf/0.1/>.
@prefix lv2:   <http://lv2plug.in/ns/lv2core#>.
@prefix mod:   <http://moddevices.com/ns/mod#>.
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#>.
@prefix units: <http://lv2plug.in/ns/extensions/units#>.

<http://moddevices.com/plugins/mod-devel/2Voices>
a lv2:Plugin, lv2:SpectralPlugin;

lv2:requiredFeature bsize:fixedBlockLength, bsize:powerOf2BlockLength;

doap:name "2Voices";

doap:developer [
    foaf:name "Andre";
    foaf:homepage <>;
    foaf:mbox <mailto:andre_coutinho@rocketmail.com>;
];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
];

mod:brand "MOD";
mod:label "2Voices";

doap:license "GPL";

lv2:minorVersion 0;
lv2:microVersion 4;

rdfs:comment """
It's a pitch shifter which can rise the pitch until 4 semitones (steps).
Despite being more limited than Super Whammy it uses less processing.
""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
    lv2:shortname "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out1";
    lv2:name "Out 1";
    lv2:shortname "Out 1";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 2;
    lv2:symbol "Out2";
    lv2:name "Out 2";
    lv2:shortname "Out 2";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "Step1";
    lv2:name "Step 1";
    lv2:shortname "Step 1";
    lv2:default 0;
    lv2:minimum -12;
    lv2:maximum 24;
    lv2:portProperty lv2:integer;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "Step2";
    lv2:name "Step 2";
    lv2:shortname "Step 2";
    lv2:default 0;
    lv2:minimum -12;
    lv2:maximum 24;
    lv2:portProperty lv2:integer;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 5;
    lv2:symbol "Gain_1";
    lv2:name "Gain 1";
    lv2:shortname "Gain 1";
    lv2:default 3.0;
    lv2:minimum -20.0;
    lv2:maximum 20.0;
    units:unit units:db;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "Gain_2";
    lv2:name "Gain 2";
    lv2:shortname "Gain 2";
    lv2:default 3.0;
    lv2:minimum -20.0;
    lv2:maximum 20.0;
    units:unit units:db;
].
