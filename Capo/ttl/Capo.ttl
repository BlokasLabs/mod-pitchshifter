@prefix doap:  <http://usefulinc.com/ns/doap#>.
@prefix epp:   <http://lv2plug.in/ns/ext/port-props/#>.
@prefix foaf:  <http://xmlns.com/foaf/0.1/>.
@prefix lv2:   <http://lv2plug.in/ns/lv2core#>.
@prefix mod:   <http://moddevices.com/ns/modgui#>.
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#>.
@prefix units: <http://lv2plug.in/ns/extension/units#>.

<http://moddevices.com/plugins/mod-devel/Capo>
a lv2:Plugin, lv2:SpectralPlugin;

doap:name "Capo";
doap:shortname "Capo";

doap:developer [
    foaf:name "Andre";
    foaf:homepage <>;
    foaf:mbox <mailto:andre_coutinho@rocketmail.com>;
];

doap:maintainer [
    foaf:name "MOD Team";
    doap:shortname "MOD";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
];

doap:license "GPL";

lv2:minorVersion 0;
lv2:microVersion 4;

doap:description """
A pitchshifter that can rise in pitch until 4 semitones.
""";

rdfs:comment """
It's a pitch shifter which can rise the pitch until 4 semitones (steps). Despite being more limited than Super Whammy, it uses less processing.
""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
    doap:shortname "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out";
    lv2:name "Out";
    doap:shortname "Out";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "Step";
    lv2:name "Step";
    doap:shortname "Step";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 4;
    lv2:portProperty lv2:integer;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "Gain";
    lv2:name "Gain";
    doap:shortname "Gain";
    lv2:default 3.0;
    lv2:minimum -20.0;
    lv2:maximum 20.0;
    units:unit units:db;
];

mod:gui [
    a mod:Gui;
    mod:resourcesDirectory <modgui>;
    mod:stylesheet <modgui/capo-stylesheet.css>;
    mod:iconTemplate <modgui/icon-capo.html>;
    mod:templateData <modgui/data-capo.json>;
    mod:screenshot <modgui/capo-screenshot.png>;
    mod:thumbnail <modgui/Capo-thumb.png>;
].
