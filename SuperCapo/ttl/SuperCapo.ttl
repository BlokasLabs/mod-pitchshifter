@prefix bsize:  <http://lv2plug.in/ns/ext/buf-size#>.
@prefix doap:   <http://usefulinc.com/ns/doap#>.
@prefix epp:    <http://lv2plug.in/ns/ext/port-props/#>.
@prefix foaf:   <http://xmlns.com/foaf/0.1/>.
@prefix lv2:    <http://lv2plug.in/ns/lv2core#>.
@prefix mod:    <http://moddevices.com/ns/mod#>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#>.
@prefix units:  <http://lv2plug.in/ns/extensions/units#>.

<http://moddevices.com/plugins/mod-devel/SuperCapo>
a lv2:Plugin, lv2:SpectralPlugin;

lv2:requiredFeature bsize:fixedBlockLength, bsize:powerOf2BlockLength;

doap:name "Super Capo";

doap:developer [
    foaf:name "Andre";
    foaf:homepage <>;
    foaf:mbox <mailto:andre_coutinho@rocketmail.com>;
];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
];

mod:brand "MOD";
mod:label "Super Capo";

doap:license "GPL";

rdfs:comment """
It's a pitch shifter which can rise the pitch until 24 semitones (steps).
Because it's more limited than Super Whammy it uses less processing, but still more than Capo.
""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
    lv2:shortname "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out";
    lv2:name "Out";
    lv2:shortname "Out";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "Step";
    lv2:name "Step";
    lv2:shortname "Step";
    lv2:portProperty lv2:integer;
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 24;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "Gain";
    lv2:name "Gain";
    lv2:shortname "Gain";
    lv2:default 3.0;
    lv2:minimum -20.0;
    lv2:maximum 20.0;
    units:unit units:db;
];

modgui:gui [
    modgui:resourcesDirectory <modgui>;
    modgui:stylesheet <modgui/supercapo-stylesheet.css>;
    modgui:iconTemplate <modgui/icon-supercapo.html>;
    modgui:templateData <modgui/data-supercapo.json>;
    modgui:screenshot <modgui/screenshot-supercapo.png>;
    modgui:thumbnail <modgui/thumb-supercapo.png>;
].
