@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props/#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix mod: <http://moddevices.com/ns/modgui#>.
@prefix units: <http://lv2plug.in/ns/extension/units#> .
@prefix host: <http://moddevices.com/ns/modhost#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

<http://moddevices.com/plugins/mod-devel/Drop>
a lv2:Plugin, lv2:SpectralPlugin;

doap:name "Drop";

doap:developer [
    foaf:name "Andre";
    foaf:homepage <>;
    foaf:mbox <mailto:andre_coutinho@rocketmail.com>;
    ];

doap:maintainer [
    foaf:name "MOD Team";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:devel@moddevices.com>;
    ];
    
    lv2:minorVersion 0;
	lv2:microVersion 2;

doap:license <GPL>;

host:recommendedBufferSize 128;

rdfs:comment """
It's a pitch shifter which can drop the pitch until 12 semitones (steps). Despite being more limited than Super Whammy, it uses less processing.

""";

lv2:port
[
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "In";
    lv2:name "In";
],
[
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "Out1";
    lv2:name "Out 1";
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "Step";
    lv2:name "Step";
    lv2:portProperty lv2:integer;
    lv2:default 0;
    lv2:minimum -12;
    lv2:maximum 0;
],
[
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "Gain";
    lv2:name "Gain";
    units:unit units:db ;
    lv2:default 3;
    lv2:minimum -20;
    lv2:maximum 20;
];
mod:gui [
        a mod:Gui;
        mod:resourcesDirectory <modgui>;
        mod:stylesheet <modgui/drop-stylesheet.css>;
        mod:iconTemplate <modgui/icon-drop.html>;
        mod:templateData <modgui/data-drop.json>;
        mod:screenshot <modgui/drop-screenshot.png>;
        mod:thumbnail <modgui/Drop-thumb.png>;
    ] .
